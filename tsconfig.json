{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "jsx": "react",
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@api/*": ["./src/api/*"],
      "@controller/*": ["./src/api/controller/*"],
      "@utils/*": ["./src/utils/*"],
      "@libs/*": ["./src/libs/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@interfaces/*": ["./src/interfaces/*"]
    },
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
